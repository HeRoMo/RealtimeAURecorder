{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "lib": ["es2015"],
    "target": "es3",
    "noImplicitUseStrict": true,
    "noLib": true,
    "experimentalDecorators": true,
    "noResolve": true,
    "pretty": true,
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ]
}
